    </div>
</aside>

@code {

    #region Fields

    public bool isOpened { get; set; } = false;

    #endregion

    #region Methods

    public void ToggleSidebar()
    {
        isOpened = !isOpened;
    }

    void NavigateToConverter()
    {
        Navigation.NavigateTo("", false);
        isOpened = false;
    }

    #endregion


}
